#include "main.h"
#include "esp01.h"

esp01_result_t esp01_init(esp01_handler_t *esp01, UART_HandleTypeDef *uart) {
    esp01_result_t res = ESP01_OK;

    esp01->uart = uart;

    char txbuf[32];

    sprintf(txbuf, "AT\n");

    HAL_UART_Transmit(esp01->uart, txbuf, strlen(txbuf) + 1, 100);

    return res;
}

void esp01_receive(char ch) {
    printf("Got ch: %c\n", ch);
}
